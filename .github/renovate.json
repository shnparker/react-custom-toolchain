{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "group:allNonMajor", "schedule:earlyMondays", ":pinAllExceptPeerDependencies"],
  "timezone": "Africa/Johannesburg",
  "npm": {
    "stabilityDays": 3,
    "enabled": true
  },
  "labels": ["renovate"],
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "assignees": [
    "shnparker"
  ],
  "reviewers": [
    "shnparker"
  ],
  "packageRules": [
    {
      "automerge": true,
      "extends": [
        "packages:linters"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "@types/node"
      ],
      "versioning": "node"
    }
  ]
}