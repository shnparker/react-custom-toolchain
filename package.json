{
  "name": "react-custom-toolchain-demo",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:shnparker/react-custom-toolchain.git"
  },
  "author": {
    "name": "Shane Parker",
    "email": "hey@shnparker.com",
    "url": "https://shnparker.com",
    "github": "shnparker"
  },
  "scripts": {
    "dev": "webpack serve --open --config config/webpack/webpack.dev.cjs --env ENV=local",
    "build": "webpack --config config/webpack/webpack.prod.cjs --env ENV=production",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write . --loglevel warn",
    "format:check": "prettier --check . --loglevel warn",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --ci --coverage",
    "prepare": "if [[ ! $NODE_ENV == \\\"production\\\" ]];then husky install; fi"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@babel/core": "7.25.8",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.25.8",
    "@babel/preset-react": "7.25.7",
    "@babel/preset-typescript": "7.25.7",
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.15",
    "@svgr/webpack": "7.0.0",
    "@tailwindcss/forms": "0.5.9",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "14.3.1",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "29.5.13",
    "@types/node": "18.19.57",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "autoprefixer": "10.4.20",
    "babel-jest": "29.7.0",
    "babel-loader": "9.2.1",
    "babel-plugin-dynamic-import-node": "2.3.3",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.11.0",
    "css-minimizer-webpack-plugin": "4.2.2",
    "eslint": "8.57.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-promise": "6.6.0",
    "eslint-plugin-react": "7.37.1",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.6.2",
    "husky": "8.0.3",
    "image-minimizer-webpack-plugin": "3.8.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "13.3.0",
    "mini-css-extract-plugin": "2.9.1",
    "postcss": "8.4.47",
    "postcss-loader": "7.3.4",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "0.6.8",
    "react-refresh": "0.14.2",
    "sharp": "0.33.5",
    "style-loader": "3.3.4",
    "tailwindcss": "3.4.14",
    "ts-jest": "29.2.5",
    "typescript": "4.9.5",
    "url-loader": "4.1.1",
    "webpack": "5.95.0",
    "webpack-bundle-analyzer": "4.10.2",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.2",
    "webpack-merge": "5.10.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,json,css,scss,md,yml,md}": "prettier --write"
  }
}
