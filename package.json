{
  "name": "react-custom-toolchain-demo",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:shnparker/react-custom-toolchain.git"
  },
  "author": {
    "name": "Shane Parker",
    "email": "hey@shnparker.com",
    "url": "https://shnparker.com",
    "github": "shnparker"
  },
  "scripts": {
    "dev": "webpack serve --open --config config/webpack/webpack.dev.cjs --env ENV=local",
    "build": "webpack --config config/webpack/webpack.prod.cjs --env ENV=production",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write . --loglevel warn",
    "format:check": "prettier --check . --loglevel warn",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --ci --coverage",
    "prepare": "if [[ ! $NODE_ENV == \\\"production\\\" ]];then husky install; fi"
  },
  "dependencies": {
    "dotenv": "16.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.21.4",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.21.4",
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.10",
    "@svgr/webpack": "7.0.0",
    "@tailwindcss/forms": "0.5.3",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/react": "18.0.31",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "autoprefixer": "10.4.14",
    "babel-jest": "29.5.0",
    "babel-loader": "9.1.2",
    "babel-plugin-dynamic-import-node": "2.3.3",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.3",
    "css-minimizer-webpack-plugin": "5.0.1",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.5.4",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.3",
    "image-minimizer-webpack-plugin": "3.8.2",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "13.2.0",
    "mini-css-extract-plugin": "2.7.5",
    "postcss": "8.4.21",
    "postcss-loader": "7.1.0",
    "prettier": "2.8.7",
    "prettier-plugin-tailwindcss": "0.2.6",
    "react-refresh": "0.14.0",
    "sharp": "0.32.0",
    "style-loader": "3.3.2",
    "tailwindcss": "3.3.1",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5",
    "url-loader": "4.1.1",
    "webpack": "5.77.0",
    "webpack-bundle-analyzer": "4.8.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.13.1",
    "webpack-merge": "5.8.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,json,css,scss,md,yml,md}": "prettier --write"
  }
}
